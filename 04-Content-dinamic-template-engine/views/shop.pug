extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")

block content
    main
      if prods.length > 0
        .grid
          each product in prods
            article.card__header 
              header.card__header 
                h1.product__title #{product.title}
              .card__image 
                img(src="https://cdn.pixabay.com/photo/2015/07/17/22/43/student-849825_960_720.jpg", alt="product")
              .card__content 
                h2.product__price $19.99
                p.product__description A very interesting pc with so many functionalities 
              .card__actions 
                button.btn Add to Cart
      else 
        h1 No Products